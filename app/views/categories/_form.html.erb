<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
  <!-- SIDEBAR - START -->
    <%= render 'layouts/sidebar' %>
  <!--  SIDEBAR - END -->
  <!-- START CONTENT -->
  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
      <div class='col-xs-12'>
        <div class="page-title">
          <div class="pull-left">
            <h1 class="title">Add a category</h1> </div>
          <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
              <li>
                <a href="index.html"><i class="fa fa-home"></i>Home</a>
              </li>
              <li>
                <a href="#">Category</a>
              </li>
              <li class="active">
                <strong>Add Category</strong>
              </li>
            </ol>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-xs-12">
        <section class="box ">
          <header class="panel_header">
            <h2 class="title pull-left">Basic Info</h2>
            <div class="actions panel_actions pull-right">
              <a class="box_toggle fa fa-chevron-down"></a>
              <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
              <a class="box_close fa fa-times"></a>
            </div>
          </header>
          <div class="content-body">
            <div class="row">
              <%= simple_form_for(category) do |f| %>
                  <% if category.errors.any? %>
                    <div id="error_explanation">
                      <h2>
                        <%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:
                      </h2>
                      <ul>
                        <% category.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                <div class="col-xs-12 col-sm-9 col-md-8">
                  <div class="form-group">
                    <label class="form-label" for="field-129990">Title</label>
                    <span class="desc"></span>
                    <div class="controls">
                      <%= f.input_field :title, class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="field-19575">Avatar</label>
                    <span class="desc"></span>
                    <div class="controls">
                      <%= f.file_field :avatar, class: "form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="form-label" for="field-19575">Parent</label>
                    <span class="desc"></span>
                    <div class="controls">
                    <%= f.association :parent, :collection => @categories, label: false, wrapper: false, :include_blank => true, class: 'form-control' %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="form-label">Description</label>
                    <span class="desc"></span>
                    <div class="controls">
                      <%= f.text_area :description, class: "form-control autogrow" %>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                  <div class="text-left">
                    <%= f.button :submit, 'Post', class: "btn btn-primary" %>
                    <button type="button" class="btn">Cancel</button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </section>
      </div>
    </section>
  </section>
  <!-- END CONTENT -->
    <div class="chatapi-windows ">
    </div>
</div>
