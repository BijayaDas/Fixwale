<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
  <!-- SIDEBAR - START -->
  <%= render 'layouts/sidebar' %>
  <!--  SIDEBAR - END -->
  <!-- START CONTENT -->
  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
      <div class='col-xs-12'>
        <div class="page-title">
          <div class="pull-left">
            <h1 class="title">Categories</h1> </div>
          <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
              <li>
                <a href="index.html"><i class="fa fa-home"></i>Home</a>
              </li>
              <li>
                <a href="crm-leads.html">Category</a>
              </li>
              <li class="active">
                <strong>All Category</strong>
              </li>
            </ol>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12">
        <section class="box ">
          <header class="panel_header">
            <h2 class="title pull-left">All Leads</h2>
            <div class="panel_actions pull-right">
              <%= link_to '<i class="fa fa-plus"></i> Add Category'.html_safe, new_category_path, class: "btn btn-success" %>
            </div>
          </header>
          <div class="content-body">
            <div class="row">
              <div class="col-xs-12">
                <!-- ********************************************** -->
                <table id="example" class="display table table-hover table-condensed">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>AVATAR</th>
                      <th>TITLE</th>
                      <th>DESCRIPTION</th>
                      <th>PARENT</th>
                      <th>ACTIONS</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.id %></td>
                      <td class=" col-xs-1"><%= image_tag(category.avatar, class: "img-rounded img-responsive") %></td>
                      <td><%= category.title %></td>
                      <td><%= category.description %></td>
                      <td><%= category.parent.title rescue "NA" %></td>
                      <td>
                        <%= link_to 'Show', category, class: "btn btn-info" %> 
                        <%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary" %> 
                        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>

                  </tbody>
                </table>
                <!-- ********************************************** -->
              </div>
            </div>
          </div>
        </section>
      </div>
    </section>
  </section>
  <!-- END CONTENT -->
</div>
