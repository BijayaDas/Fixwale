<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
  <!-- SIDEBAR - START -->
  <%= render 'layouts/sidebar' %>
  <!--  SIDEBAR - END -->
  <!-- START CONTENT -->
  <section id="main-content" class=" ">
    <section class="wrapper main-wrapper row" style=''>
      <div class='col-xs-12'>
        <div class="page-title">
          <div class="pull-left">
            <h1 class="title">Enquiry Details</h1>
          </div>
          <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
              <li>
                <a href="#"><i class="fa fa-home"></i>Home</a>
              </li>
              <li>
                <a href="#">Enquiry</a>
              </li>
              <li class="active">
                <strong>Details</strong>
              </li>
            </ol>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="col-lg-12">
        <section class="box nobox ">
          <div class="content-body">
            <div class="row">
              <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="uprofile-image">
                  <img src="/assets/data/courses/course-1.jpg" class="img-responsive">
                </div>
                <div class="uprofile-name">
                  <h3>
                    <a href="#"><%= @enquiry.user.full_name %></a>
                    <!-- Available statuses: online, idle, busy, away and offline -->
                    <span class="uprofile-status online"></span>
                  </h3>
                  <p class="uprofile-title">Mob: <%= @enquiry.mobile %></p>
                  <p class="uprofile-title">Email: <%= @enquiry.email %></p>
                </div>
                <div class="uprofile-info">
                  <%= @enquiry.contact_details %>
                  <!--
                    <ul class="list-unstyled">
                      <li><i class='fa fa-home'></i> New York, USA</li>
                      <li><i class='fa fa-user'></i> 340 Contacts</li>
                    </ul>
                    -->
                </div>
                <% unless @enquiry.enquiry_owner(current_user) %>
                  <div class="uprofile-buttons">
                   <%= link_to "Apply", new_reply_path(job_id: @enquiry.id), class: "btn btn-md btn-primary" %>
                   <%= link_to "Report", report_enquiry_path(@enquiry), class: "btn btn-md btn-danger" %>
                   <!-- <a class="btn btn-md btn-primary">Add as Friend</a>-->
                  </div>
                <% end %>  
              </div>
              <div class="col-md-9 col-sm-8 col-xs-12">
                <div class="uprofile-content">
                  <div class="">
                    <h4> <%= @enquiry.title %></h4>
                    <hr>
                    <h4>Status: <%= @enquiry.status %></h4>
                    <h4>Category: <%= @enquiry.category.title %></h4>
                    <h4>Max Application: <%= @enquiry.max_applications %></h4>
                    <h4>Deadline: <%= @enquiry.deadline %></h4>
                    <div class="clearfix"></div>
                    <p><strong>Job Description:</strong> <%= @enquiry.job_description %></p>
                    <hr>
                    <div class="clearfix"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <div class="clearfix"></div>
      <div class="col-lg-12">
        <section class="box ">
          <header class="panel_header">
            <h2 class="title pull-left">All Replies</h2>
          </header>
          <div class="content-body">
            <div class="row">
              <div class="col-xs-12">
                <!-- ********************************************** -->
                <table id="example" class="display table table-hover table-condensed">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>EXPECTED AMOUNT</th>
                      <th>STATUS</th>
                      <th>ENQUIRY ID</th>
                      <th>ACTIONS</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @replies.each do |reply| %>
                    <tr>
                      <td><%= reply.id %></td>
                      <td><%= reply.expected_amount %></td>
                      <td><%= reply.status rescue nil%></td>
                      <td>#<%= reply.enquiry.id rescue nil %></td>
                      <td>
                        <%= link_to 'Show', reply, class: "btn btn-info" %> 
                        <%= link_to 'Edit', edit_reply_path(reply), class: "btn btn-primary" %> 
                        <%#= link_to 'Destroy', reply, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                      </td>
                    </tr>
                  <% end %>

                  </tbody>
                </table>
                <!-- ********************************************** -->
              </div>
            </div>
          </div>
        </section>
      </div>
    </section>
  </section>
  <!-- END CONTENT -->
</div>
<!-- END CONTAINER -->
<!-- LOAD FILES AT PAGE END FOR FASTER LOADING -->