<section>
    <div class="second-page-container">
        <div class="block">
            <div class="container">
                <div class="header-for-light">
                    <h1 class="wow fadeInRight animated" data-wow-duration="1s"><span>Login</span> or <span>Register</span></h1>
                </div>
                <div class="row">
                    <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="block-form box-border wow fadeInLeft animated" data-wow-duration="1s">
                            <h3><i class="fa fa-unlock"></i>Login</h3>
                            <p>Please login using your existing account</p>
                                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'col-md-12' } }) do |f| %>
                                <%= f.error_notification %>
                                <div class="row">
                                    <div class="col-md-6">
                                    <%= f.input_field :email, required: false, autofocus: true, class: 'form-control', placeholder: "Username" %>
                                    </div>
                                    <div class="col-md-6">
                                     <%= f.input_field :password, required: false,  class: 'form-control', placeholder: "Password" %>
                                    </div>
                                    <div class="col-md-12">
                                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                    <div class="col-md-12">
                                    <hr>
                                    <%= f.button :submit, "Login", class: "btn-default-1" %>
                                    <%= link_to "Forgot password?", new_password_path(resource_name), class: "btn-default-1"%>

                                    </div>
                                    <div class="col-md-12">
                                         <%- if devise_mapping.omniauthable? %>
                                          <%- resource_class.omniauth_providers.each do |provider| %>
                                            <% if provider.to_s == "facebook" %>
                                              <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-primary") do %>
                                              <i class="fa fa-facebook"> Facebook login</i>
                                              <% end%>
                                            <% end %>
                                            <% if provider.to_s == "google_oauth2" %>
                                              <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-danger") do %>
                                                <i class="fa fa-google"> Google login</i>
                                              <% end %>
                                            <% end %>
                                          <% end -%>
                                        <% end -%>
                                    </div>
                                </div>                                    
                     <% end %>
                        </div>
                    </article>
                    <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="block-form box-border wow fadeInRight animated" data-wow-duration="1s">
                            <h3><i class="fa fa-pencil"></i>Create new account</h3>
                            <p>Registration allows you to avoid filling in billing and shipping forms every time you checkout on this website.</p>
                            <hr>
                            <%= link_to "Register", new_registration_path(resource_name), class: "btn-default-1" %>
                        </div>

                    </article>
                </div>
            </div>
        </div>
    </div> 
</section>

<style type="text/css">
    #user_remember_me {
        width: 20px;
    }
</style>