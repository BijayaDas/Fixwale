<script type="text/javascript">
    $('body').addClass("login_page");
</script>
<div class="container-fluid">
    <div class="login-wrapper row">
        <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
            <h1><a href="#" title="Login Page" tabindex="-1">fixwale</a></h1>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: '' } }) do |f| %>
                <%= f.error_notification %>

                <p>
                    <label for="user_login">Email<br />
                    <%= f.input_field :email, required: false, autofocus: true, class: 'input', placeholder: "Email" %>
                    </label>
                </p>
                <p>
                    <label for="user_pass">Password<br />
                        <%= f.input_field :password, required: false,  class: 'input', placeholder: "Password" %>
                    </label>
                </p>
                <p class="forgetmenot">
                    <label class="icheck-label form-label" for="rememberme">
                        <%= f.input :remember_me, as: :boolean, :input_html => { :checked => "checked", class: "icheck-minimal-aero"} if devise_mapping.rememberable? %>
                    </label>
                </p>
                <p class="submit">
                        <%= f.button :submit, "Login", class: "btn btn-accent btn-block" %>
                </p>
            <% end %>
            
            <p id="nav">
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "pull-left"%>
                <%= link_to "Register", new_registration_path(resource_name), class: "pull-right" %>
            </p>
            <div class="clearfix"></div>
            <div class="text-center register-social">
                <%- if devise_mapping.omniauthable? %>
                  <%- resource_class.omniauth_providers.each do |provider| %>
                    <% if provider.to_s == "facebook" %>
                      <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-lg facebook") do %>
                      <i class="fa fa-facebook icon-sm"></i>
                      <% end%>
                    <% end %>
                    <% if provider.to_s == "google_oauth2" %>
                      <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-lg google-plus") do %>
                        <i class="fa fa-google-plus icon-sm"></i>
                      <% end %>
                    <% end %>
                  <% end -%>
                <% end -%>

               <!--  <a href="#" class="btn btn-primary btn-lg facebook"><i class="fa fa-facebook icon-sm"></i></a>
                <a href="#" class="btn btn-primary btn-lg twitter"><i class="fa fa-twitter icon-sm"></i></a>
                <a href="#" class="btn btn-primary btn-lg google-plus"><i class="fa fa-google-plus icon-sm"></i></a>
                <a href="#" class="btn btn-primary btn-lg dribbble"><i class="fa fa-dribbble icon-sm"></i></a> -->

            </div>
        </div>
    </div>
</div>
